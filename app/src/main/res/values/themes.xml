<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.E_Market" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#33084C</item>
        <item name="colorPrimaryVariant">#4A148C</item>
        <item name="colorOnPrimary">#4A148C</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#EDE7F6</item>
        <item name="colorSecondaryVariant">#EDE7F6</item>
        <item name="colorOnSecondary">#EDE7F6</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#E1BEE7</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.E_Market.Fullscreen" parent="Theme.E_Market">
        <item name="android:actionBarStyle">@style/Widget.Theme.E_Market.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.E_Market.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">#E1BEE7</item>
        <item name="fullscreenTextColor">#E1BEE7</item>
    </style>
